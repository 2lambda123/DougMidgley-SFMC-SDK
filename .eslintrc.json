{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "plugin:unicorn/recommended",
        "eslint:recommended",
        "plugin:mocha/recommended",
        "plugin:jsdoc/recommended",
        "plugin:prettier/recommended"
    ],
    "plugins": ["mocha", "jsdoc"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "rules": {
        "unicorn/prefer-module": "off",
        "unicorn/numeric-separators-style": "off"
    }
}
